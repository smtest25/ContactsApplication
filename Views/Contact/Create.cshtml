@model ContactsApplication.Models.ContactModel
@using Microsoft.AspNetCore.Mvc.Localization
@using ContactsApplication.Resources
@inject IHtmlLocalizer<GlobalResource> Resource

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Resource["Headings.NewRecord"]</title>
    <script src="~/js/js.js"></script>
    <link href="~/css/css.css" rel="stylesheet" />
</head>
<body>

    <h4>@Resource["Headings.NewRecord"]</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-dngr"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-dngr"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-dngr"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-dngr"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-dngr"></span>
                </div>
                <div class="form-controls">
                    <button type="submit" class="bttn xtra">@Resource["Buttons.SaveChanges"]</button>
                    <a class="bttn norm" asp-action="Index" asp-route-sort="@ViewData["Sort"]" asp-route-filter="@ViewData["Filter"]">@Resource["Buttons.BackToList"]</a>
                </div>
            </form>
        </div>
    </div>

    <div>
    </div>

</body>
</html>
