@model ContactsApplication.Models.ContactModel
@using Microsoft.AspNetCore.Mvc.Localization
@using ContactsApplication.Resources
@inject IHtmlLocalizer<GlobalResource> Resource

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Resource["Headings.ViewRecord"] ID @Model.ID</title>
    <script src="~/js/js.js"></script>
    <link href="~/css/css.css" rel="stylesheet" />
</head>
<body>

    <h4>@Resource["Headings.ViewRecord"] ID @Model.ID</h4>
    <div class="row">
        <div>
            <div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input disabled="disabled" autocomplete="off" id="FirstName" name="FirstName" value="@Model.FirstName" class="form-control no-edit" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input disabled="disabled" autocomplete="off" id="LastName" name="LastName" value="@Model.LastName" class="form-control no-edit" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input disabled="disabled" autocomplete="off" id="Phone" name="Phone" value="@Model.Phone" class="form-control no-edit" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input disabled="disabled" autocomplete="off" id="Email" name="Email" value="@Model.Email" class="form-control no-edit" />
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input disabled="disabled" autocomplete="off" id="City" name="City" value="@Model.City" class="form-control no-edit" />
                </div>
                <div class="form-controls">
                    <a class="bttn xtra" asp-action="Edit" asp-route-id="@Model?.ID" asp-route-sort="@ViewData["Sort"]" asp-route-filter="@ViewData["Filter"]">@Resource["Buttons.Edit"]</a>
                    <a class="bttn norm" asp-action="Index" asp-route-sort="@ViewData["Sort"]" asp-route-filter="@ViewData["Filter"]">@Resource["Buttons.BackToList"]</a>
                </div>
            </div>
        </div>
    </div>

    <div>
    </div>

</body>
</html>
